{
    "compilerOptions": {
      "target": "ES6",                // Set the ECMAScript target version
      "module": "ESNext",             // Use ESNext for module resolution
      "declaration": true,             // Generate declaration files
      "outDir": "package/numberjs/dist",              // Output directory for compiled files
      "rootDir": "./src",              // Root directory of source files
      "strict": true,                  // Enable strict type checking
      "moduleResolution": "node",
      "noEmit": true,
      "strictPropertyInitialization": false
    },
    "include": ["src/**/*.ts", "__tests__/**/*.ts"],       // Include all .ts files in src
    "exclude": ["node_modules"]       // Exclude node_modules
  }
  